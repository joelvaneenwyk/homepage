{
    "name": "loveit-src",
    "version": "0.2.0",
    "description": "LoveIt theme source file",
    "private": true,
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.0",
        "@babel/preset-env": "^7.9.0",
        "babel-preset-minify": "^0.5.1",
        "babelify": "^10.0.0",
        "browserify": "^16.5.0",
        "core-js": "^3.6.4",
        "husky": "^4.2.3",
        "minimist": "^1.2.5",
        "segmentit": "^2.0.3"
    },
    "scripts": {
        "babel": "babel src/js --out-file assets/js/theme.min.js --source-maps",
        "build": "browserify src/lib/lunr.segmentit.js -o assets/lib/lunr/lunr.segmentit.js -t babelify --presets @babel/preset-env --presets minify"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn build && git add assets/js"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dillonzq/LoveIt.git"
    },
    "keywords": [
        "hugo",
        "theme"
    ],
    "author": "Dillon",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/dillonzq/LoveIt/issues"
    },
    "homepage": "https://github.com/dillonzq/LoveIt#readme"
}
