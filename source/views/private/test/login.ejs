<!DOCTYPE html>
<html lang="en-US">

<head>
    <% include ../../_partials/head %>
</head>

<body>
    <div class="container-fluid parent">
        <% include ../../_partials/header %>
        <div class='row'>
            <div class='blog col-sm-12 col-md-offset-2 col-md-8'>
                <form  data-toggle="validator" class="well form-horizontal" action="login" method="POST" id="private_form" name="private_form">
                    <fieldset>
                        <legend>Test</legend>
                        <div class="form-group">
                            <div class="col-md-6 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon">@</span>
                                    <input type="password" data-minlength="5" name="password" placeholder="Password" class="form-control">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                        <!-- Success message -->
                        <div class="alert alert-success success_message" role="alert" id="success_message"></div>
                        <div class="alert alert-danger failure_message" role="alert" id="failure_message"></div>
                        <!-- Button -->
                        <div class="form-group">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-warning">
                                    Unlock
                                    <span class="glyphicon glyphicon-lock"></span>
                                </button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    <% include ../../_partials/footer %>
</body>

</html>
