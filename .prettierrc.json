{
    "semi": true,
    "plugins": ["prettier-plugin-toml", "prettier-plugin-sh", "prettier-eslint"],
    "overrides": [
        {
            "files": ["**/*.json"],
            "options": {
                "tabWidth": 4,
                "printWidth": 130,
                "proseWrap": "preserve"
            }
        },
        {
            "files": ["content/**/*.md"],
            "options": {
                "tabWidth": 2,
                "printWidth": 130,
                "proseWrap": "preserve"
            }
        }
    ]
}
