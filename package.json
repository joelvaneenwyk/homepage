{
    "name": "homepage",
    "version": "2.0.1",
    "description": "Homepage for Joel Van Eenwyk (joelvaneenwyk.com)",
    "homepage": "https://www.joelvaneenwyk.com",
    "author": {
        "name": "Joel Van Eenwyk",
        "email": "joel.vaneenwyk@gmail.com"
    },
    "main": "dist/server/server.js",
    "type": "commonjs",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/joelvaneenwyk/homepage.git"
    },
    "node": "14.x",
    "workspaces": [
        "homepage",
        "themes/base"
    ],
    "private": true,
    "packageManager": "yarn@3.0.1-rc.2",
    "engines": {
        "node": "^14.0.0",
        "npm": "^7.0.0"
    },
    "scripts": {
        "vscode": "yarn sdks vscode",
        "start": "node --require=./.pnp.cjs ./dist/server/server.js",
        "server": "tsc && node ./dist/server/server.js",
        "heroku-build": "echo '[mycelio] Heroku does not build the site and relies on what is submitted.'",
        "heroku-postbuild": "echo '[mycelio] This runs after Heroku installs dependencies'. && yarn test",
        "heroku-cleanup": "echo '[mycelio] Heroku cleanup step.'",
        "lint": "eslint *.ts",
        "pretty": "yarn prettier --write .vscode/ *.json .*.json",
        "build": "echo Building typescript server and website... && tsc && yarn pretty && yarn build-theme && hugo --cleanDestinationDir --enableGitInfo --forceSyncStatic",
        "build-theme": "cd themes/base && browserify src/lib/lunr.segmentit.js -o assets/lib/lunr/lunr.segmentit.js -t babelify --presets @babel/preset-env --presets minify",
        "watch": "hugo --cleanDestinationDir --buildDrafts server",
        "babel": "babel themes/base/src/js --out-file themes/base/assets/js/theme.min.js --source-maps",
        "check": "htmlproofer dist --check-html --allow-hash-href --empty-alt-ignore --disable-external",
        "ci": "act",
        "postinstall": "tsc",
        "prepublishOnly": "pinst --disable",
        "postpublish": "pinst --enable",
        "test": "tsc && node --require=./.pnp.cjs ./dist/server/server.js --test"
    },
    "keywords": [
        "homepage",
        "nodejs",
        "bower",
        "resume"
    ],
    "bugs": {
        "url": "https://github.com/joelvaneenwyk/workspace/issues",
        "email": "joel.vaneenwyk@gmail.com"
    },
    "dependencies": {
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@types/node": "^16.6.0",
        "@types/node-static": "^0.7.7",
        "@typescript-eslint/eslint-plugin": "^4.29.1",
        "@typescript-eslint/parser": "^4.29.1",
        "@yarnpkg/cli": "^3.0.1",
        "@yarnpkg/core": "^3.1.0-rc.1",
        "@yarnpkg/plugin-workspace-tools": "^3.0.0",
        "@yarnpkg/pnpify": "^3.0.1",
        "@yarnpkg/sdks": "^2.4.1-rc.4",
        "babel-preset-minify": "^0.5.1",
        "babelify": "^10.0.0",
        "browserify": "^17.0.0",
        "core-js": "^3.16.1",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-import-resolver-node": "^0.3.5",
        "eslint-plugin-import": "^2.24.0",
        "minimist": "^1.2.5",
        "node-static": "^0.7.11",
        "run-script-os": "^1.1.6",
        "segmentit": "^2.0.3",
        "ts-node": "^10.2.0",
        "tslib": "^2.3.1",
        "typescript": "^4.3.5"
    },
    "devDependencies": {
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "htmlhint": "^0.15.1",
        "husky": "^7.0.1",
        "pinst": "^2.1.6",
        "prettier": "^2.3.2",
        "prettier-eslint": "^13.0.0",
        "stylelint": "^13.13.1",
        "stylelint-config-prettier": "^8.0.2"
    }
}
