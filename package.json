{
    "name": "homepage",
    "version": "2.0.1",
    "description": "Homepage for Joel Van Eenwyk",
    "homepage": "https://www.joelvaneenwyk.com",
    "author": {
        "name": "Joel Van Eenwyk",
        "email": "joel.vaneenwyk@gmail.com"
    },
    "main": "dist/server/server.js",
    "type": "commonjs",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/joelvaneenwyk/homepage.git"
    },
    "workspaces": [
        "homepage"
    ],
    "private": true,
    "packageManager": "yarn@3.2.3",
    "engines": {
        "node": "^14.13.0",
        "npm": "^7.19.0"
    },
    "cacheDirectories": [
        ".yarn/cache"
    ],
    "scripts": {
        "start": "node ./dist/server/server.js",
        "start-dev": "tsc && node ./dist/dev/server.js",
        "watch": "hugo --cleanDestinationDir --enableGitInfo --forceSyncStatic server",
        "test": "yarn build server && node --require=./.pnp.cjs ./dist/server/server.js --test",
        "dev": "yarn sdks vscode",
        "github": "act",
        "reinstall": "yarn cache clean --all && yarn install",
        "lint": "eslint *.ts",
        "lint:html": "htmlproofer dist --check-html --allow-hash-href --empty-alt-ignore --disable-external",
        "build": "echo Building typescript server and website... && concurrently -m 1 --prefix-colors yellow,cyan,green,blue \"yarn:build:*\"",
        "build:theme": "concurrently \"yarn:theme:*\"",
        "build:theme:babel": "cd themes/base && babel src/js --out-file assets/js/theme.min.js --source-maps",
        "build:theme:segmentit": "cd themes/base && browserify src/lib/lunr.segmentit.js -o assets/lib/lunr/lunr.segmentit.js -t babelify --presets @babel/preset-env --presets minify",
        "build:hugo": "hugo --cleanDestinationDir --enableGitInfo --forceSyncStatic",
        "build:server": "ts-node ./src/tools/bundle-server.ts",
        "build:pretty": "yarn prettier --write dist/ .vscode/ *.json .*.json themes/base/.babelrc config.toml src/heroku/*.sh",
        "build:js-beautify": "ts-node ./src/tools/beautify.ts",
        "heroku-prebuild": "bash ./src/heroku/prebuild.sh",
        "heroku-postbuild": "bash ./src/heroku/postbuild.sh",
        "heroku-cleanup": "bash ./src/heroku/cleanup.sh",
        "prepublishOnly": "pinst --disable",
        "postpublish": "pinst --enable"
    },
    "keywords": [
        "homepage",
        "nodejs",
        "hugo",
        "portfolio",
        "résumé"
    ],
    "bugs": {
        "url": "https://github.com/joelvaneenwyk/workspace/issues",
        "email": "joel.vaneenwyk@gmail.com"
    },
    "dependencies": {
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@toml-tools/lexer": "^0.3.1",
        "@types/js-beautify": "^1.13.2",
        "@types/node": "^16.6.1",
        "@types/node-static": "^0.7.7",
        "@typescript-eslint/eslint-plugin": "^4.29.2",
        "@typescript-eslint/parser": "^4.29.2",
        "@yarnpkg/cli": "^3.0.1",
        "@yarnpkg/core": "^3.1.0-rc.1",
        "@yarnpkg/esbuild-plugin-pnp": "^1.0.1-rc.1",
        "@yarnpkg/plugin-workspace-tools": "^3.0.0",
        "babel-preset-minify": "^0.5.1",
        "babelify": "^10.0.0",
        "browserify": "^17.0.0",
        "concurrently": "^6.2.1",
        "core-js": "^3.16.2",
        "esbuild": "^0.12.20",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-node": "^0.3.6",
        "eslint-plugin-import": "^2.24.0",
        "htmlhint": "^0.15.1",
        "husky": "^7.0.1",
        "js-beautify": "^1.14.0",
        "minimist": "^1.2.5",
        "node-gyp": "^8.1.0",
        "node-static": "^0.7.11",
        "pinst": "^2.1.6",
        "postcss": "^8.3.6",
        "postcss-html": "^0.36.0",
        "postcss-markdown": "^0.36.0",
        "postcss-syntax": "^0.36.2",
        "prettier": "^2.3.2",
        "prettier-eslint": "^13.0.0",
        "prettier-plugin-sh": "^0.7.1",
        "prettier-plugin-toml": "^0.3.1",
        "segmentit": "^2.0.3",
        "stylelint": "^13.13.1",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^22.0.0",
        "ts-node": "^10.2.0",
        "tslib": "^2.3.1",
        "typescript": "^4.3.5",
        "typescript-bundle": "^1.0.17"
    },
    "devDependencies": {
        "@yarnpkg/pnpify": "^3.0.1",
        "@yarnpkg/sdks": "^2.4.1-rc.4"
    }
}
