{
    "name": "homepage",
    "version": "2.0.1",
    "description": "Homepage for Joel Van Eenwyk",
    "homepage": "https://www.joelvaneenwyk.com",
    "author": {
        "name": "Joel Van Eenwyk",
        "email": "joel.vaneenwyk@gmail.com"
    },
    "main": "dist/server/server.js",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/joelvaneenwyk/homepage.git"
    },
    "workspaces": [
        "homepage",
        "src/server",
        "src/tools"
    ],
    "private": true,
    "packageManager": "yarn@4.0.2",
    "engines": {
        "node": "^14.13.0",
        "npm": "^7.19.0"
    },
    "cacheDirectories": [
        ".yarn/cache"
    ],
    "scripts": {
        "start": "ts-node ./src/server/server.ts",
        "start-dev": "tsc && ts-node ./src/server/server.ts",
        "watch": "hugo --cleanDestinationDir --enableGitInfo --forceSyncStatic server",
        "test": "yarn build server && node --require=./.pnp.cjs ./dist/server/server.js --test",
        "dev": "yarn sdks vscode",
        "github": "act",
        "upgrade": "npx -y npm-check-updates@latest -u && yarn install && npx -y yarn-audit-fix@latest && yarn run build:pretty",
        "reinstall": "yarn cache clean --all && yarn install",
        "lint": "eslint src/**/*.ts",
        "build": "echo Building typescript server and website... && concurrently -m 1 --prefix-colors yellow,cyan,green,blue \"yarn:build:*\"",
        "build:theme": "yarn run build:theme:babel && yarn run build:theme:segmentit",
        "build:theme:babel": "cd themes/base && babel src/js --out-file assets/js/theme.min.js --source-maps",
        "build:theme:segmentit": "cd themes/base && browserify src/lib/lunr.segmentit.js -o assets/lib/lunr/lunr.segmentit.js -t babelify --presets @babel/preset-env --presets minify",
        "build:hugo": "hugo --cleanDestinationDir --enableGitInfo --forceSyncStatic",
        "build:server": "ts-node ./src/tools/bundle-server.ts",
        "build:pretty": "yarn prettier --write dist/ .vscode/ *.json themes/base/.babelrc config.toml src/bin/*.sh",
        "build:js-beautify": "ts-node ./src/tools/beautify.ts",
        "heroku-prebuild": "bash ./src/bin/prebuild.sh",
        "heroku-postbuild": "bash ./src/bin/postbuild.sh",
        "heroku-cleanup": "bash ./src/bin/cleanup.sh",
        "prepublishOnly": "pinst --disable",
        "postpublish": "pinst --enable"
    },
    "keywords": [
        "homepage",
        "nodejs",
        "hugo",
        "portfolio",
        "résumé"
    ],
    "bugs": {
        "url": "https://github.com/joelvaneenwyk/workspace/issues",
        "email": "joel.vaneenwyk@gmail.com"
    },
    "prettier": {
        "semi": true,
        "plugins": [
            "prettier-plugin-toml",
            "prettier-plugin-sh",
            "prettier-eslint"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.json"
                ],
                "options": {
                    "tabWidth": 4,
                    "printWidth": 130,
                    "proseWrap": "preserve"
                }
            },
            {
                "files": [
                    "content/**/*.md"
                ],
                "options": {
                    "tabWidth": 2,
                    "printWidth": 130,
                    "proseWrap": "preserve"
                }
            }
        ]
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "commonjs": true,
            "es6": true,
            "jquery": true,
            "node": true
        },
        "extends": [
            "airbnb-base"
        ],
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2018
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "ignorePatterns": [
            "themes/base/assets/lib/**",
            "src/server/cheeses/output/**",
            "dist/**",
            "**/*.min.js",
            "**/newrelic.js"
        ],
        "rules": {
            "indent": [
                "error",
                4
            ],
            "max-len": [
                "error",
                {
                    "code": 130
                }
            ],
            "linebreak-style": "off",
            "quotes": [
                "error",
                "double"
            ],
            "semi": [
                "error",
                "always"
            ],
            "arrow-body-style": [
                "error",
                "as-needed"
            ],
            "prefer-arrow-callback": "off",
            "sort-imports": "off",
            "no-cond-assign": [
                "error",
                "always"
            ],
            "import/first": "off",
            "comma-dangle": [
                "error",
                {
                    "arrays": "never",
                    "objects": "never",
                    "imports": "never",
                    "exports": "never",
                    "functions": "never"
                }
            ],
            "no-console": "off"
        }
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": "> 0.25%, not dead"
                }
            ],
            "minify"
        ]
    },
    "dependencies": {
        "@babel/cli": "^7.23.4",
        "@babel/core": "^7.23.7",
        "@babel/preset-env": "^7.23.7",
        "@toml-tools/lexer": "^1.0.0",
        "@types/js-beautify": "^1.14.3",
        "@types/node": "^20.10.6",
        "@types/node-static": "^0.7.11",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "@yarnpkg/cli": "^4.0.2",
        "@yarnpkg/core": "^4.0.2",
        "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.15",
        "@yarnpkg/plugin-git": "^3.0.0",
        "@yarnpkg/plugin-workspace-tools": "^4.0.1",
        "@yarnpkg/pnpify": "^4.0.1",
        "@yarnpkg/sdks": "^3.1.0",
        "babel-preset-minify": "^0.5.2",
        "babelify": "^10.0.0",
        "browserify": "^17.0.0",
        "concurrently": "^8.2.2",
        "core-js": "^3.35.0",
        "esbuild": "^0.19.11",
        "eslint": "^8.56.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-node": "^0.3.9",
        "eslint-plugin-import": "^2.29.1",
        "htmlhint": "^1.1.4",
        "husky": "^8.0.3",
        "js-beautify": "^1.14.11",
        "minimist": "^1.2.8",
        "node-gyp": "^10.0.1",
        "node-static": "^0.7.11",
        "pinst": "^3.0.0",
        "postcss": "^8.4.32",
        "postcss-html": "^1.5.0",
        "postcss-markdown": "^1.2.0",
        "postcss-syntax": "^0.36.2",
        "prettier": "^3.1.1",
        "prettier-eslint": "^16.2.0",
        "prettier-plugin-sh": "^0.13.1",
        "prettier-plugin-toml": "^2.0.1",
        "segmentit": "^2.0.3",
        "stylelint": "*",
        "stylelint-config-recommended": "*",
        "ts-node": "^10.9.2",
        "tslib": "^2.6.2",
        "typescript": "^5.3.3",
        "typescript-bundle": "^1.0.18",
        "yarn-audit-fix": "^10.0.7"
    }
}
