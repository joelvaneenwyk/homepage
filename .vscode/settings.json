// Place your settings in this file to overwrite default and user settings.
{
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,

    "htmlhint.enable": false,
    "css.validate": false,

    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "json.format.enable": true,

    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.formatOnSave": true
    },
    "typescript.tsdk": ".yarn/sdks/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true,

    "prettier.prettierPath": ".yarn/sdks/prettier/index.js",

    "stylelint.stylelintPath": ".yarn/sdks/stylelint/lib/index.js",
    "stylelint.enable": false,

    "eslint.nodePath": ".yarn/sdks",
    "eslint.format.enable": true,
    "eslint.alwaysShowStatus": true,
    "eslint.lintTask.enable": true,
    "eslint.run": "onSave",

    "sortJSON.excludedFiles": ["package.json", "settings.json"],

    "prettier.enable": true,

    "perl.enable": false,

    "liveServer.settings.port": 13555,
    "liveServer.settings.root": "/dist/www",
    "liveServer.settings.ignoreFiles": [
        ".vscode/**",
        ".tmp/**",
        "backup/**",
        ".yarn/**",
        "themes/**",
        "**/*.scss",
        "**/*.sass",
        "**/*.ts"
    ],

    "files.associations": {
        "tsconfig.json": "jsonc",
        ".eslintrc.json": "jsonc",
        "*.json.git": "jsonc"
    },

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.heroku": true,
        "**/.DS_Store": true,
        "**/.yarn/cache": true,
        "**/bower_components": true,
        "**/node_modules": true,
        "**/bin": true,
        "**/workspace": true,
        "**/typings": true,
        "**/thirdparty": true
    },

    "search.exclude": {
        "yarn.lock": true,
        "**/*.svg": true,
        "themes/base/assets/**/*.js": true,
        "themes/base/assets/**/*.css": true,
        "**/.yarn": true,
        "**/backup/**": true,
        "**/dist/**": true,
        "**/cheeses/output/**": true,
        "**/node_modules/**": true,
        "**/bower_components/**": true,
        "**/*.code-search": true,
        "**/.pnp.*": true,
        "**/*.min.css": true,
        "**/*.min.js": true,
        "**/*.min.js.map": true
    },

    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/objects/**",
        ".vscode",
        ".vscode-insiders",
        "dist",
        "resources",
        ".yarn",
        "backup",
        "**/*.min.js"
    ],
    "cSpell.words": [
        "Datamap",
        "Gruntfile",
        "actions",
        "autosearch",
        "autotrack",
        "bootlint",
        "bungie",
        "chillingo",
        "cmaps",
        "cond",
        "cookieconsent",
        "cssjs",
