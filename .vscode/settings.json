// Place your settings in this file to overwrite default and user settings.
{
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "python.dataScience.alwaysScrollOnNewCell": false,
  "editor.mouseWheelScrollSensitivity": 1,
  "htmlhint.enable": false,
  "css.validate": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "json.format.enable": true,
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.formatOnSave": true
  },
  "typescript.tsdk": ".yarn/sdks/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "prettier.prettierPath": ".yarn/sdks/prettier/index.cjs",
  "stylelint.stylelintPath": ".yarn/sdks/stylelint/lib/index.js",
  "stylelint.enable": false,
  "eslint.nodePath": ".yarn/sdks",
  "eslint.format.enable": true,
  "eslint.alwaysShowStatus": true,
  "eslint.lintTask.enable": true,
  "eslint.run": "onSave",
  "sortJSON.excludedFiles": [
    "package.json",
    "settings.json"
  ],
  "prettier.enable": true,
  "perl.enable": false,
  "liveServer.settings.port": 13555,
  "liveServer.settings.root": "/dist/www",
  "liveServer.settings.ignoreFiles": [
    ".vscode/**",
    ".tmp/**",
    "backup/**",
    ".yarn/**",
    "themes/**",
    "**/*.scss",
    "**/*.sass",
    "**/*.ts"
  ],
  "files.associations": {
    "Procfile": "yaml",
    "LICENSE": "text",
    "tsconfig.json": "jsonc",
    ".eslintrc.json": "jsonc",
    "cspell.json": "jsonc",
    "*.json.git": "jsonc"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.heroku": true,
    "**/.DS_Store": true,
    "**/.yarn/cache": true,
    "**/bower_components": true,
    "**/node_modules": true
  },
  "search.exclude": {
    "yarn.lock": true,
    "**/*.svg": true,
    "themes/base/assets/**/*.js": true,
    "themes/base/assets/**/*.css": true,
    "**/.yarn": true,
    "**/backup/**": true,
    "**/dist/**": true,
    "**/cheeses/output/**": true,
    "**/node_modules/**": true,
    "**/bower_components/**": true,
    "**/*.code-search": true,
    "**/.pnp.*": true,
    "**/*.min.css": true,
    "**/*.min.js": true,
    "**/*.min.js.map": true
  }
}
