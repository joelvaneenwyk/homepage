// Place your settings in this file to overwrite default and user settings.
{
    "[json]": {
        "editor.formatOnSave": false
    },
    "[jsonc]": {
        "editor.formatOnSave": false
    },
    "eslint.format.enable": false,
    "sortJSON.excludedFiles": [
        "package.json",
        "settings.json"
    ],

    "perl.enable": false,
    "prettier.enable": true,
    "editor.formatOnSave": false,
    "json.format.enable": false,

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.heroku": true,
        "**/.DS_Store": true,
        "**/.yarn/cache": true,
        "**/bower_components": true,
        "**/node_modules": true,
        "**/bin": true,
        "**/workspace": true,
        "**/typings": true,
        "**/thirdparty": true
    },

    "liveServer.settings.port": 13555,
    "liveServer.settings.root": "/dist",
    "liveServer.settings.ignoreFiles": [
        ".vscode/**",
        ".tmp/**",
        "backup/**",
        ".yarn/**",
        "themes/**",
        "**/*.scss",
        "**/*.sass",
        "**/*.ts"
    ],

    "search.exclude": {
        "**/.yarn/cache": true,
        "**/backup/**": true,
        "**/dist/**": true,
        "themes/**/*.md": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.yarn": true,
        "**/.pnp.*": true
    },

    "htmlhint.enable": false,
    "css.validate": false,

    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },

    "files.associations": {
        "tsconfig.json": "jsonc",
        ".eslintrc.json": "jsonc",
        "*.json.git": "jsonc"
    },

    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,

    "typescript.tsdk": ".yarn/sdks/typescript/lib",
    "eslint.nodePath": ".yarn/sdks",
    "typescript.enablePromptUseWorkspaceTsdk": true,

    "cSpell.words": [
        "Datamap",
        "Gruntfile",
        "actions",
        "autosearch",
        "autotrack",
        "bootlint",
        "cmaps",
        "cond",
        "cookieconsent",
        "cssjs",
        "datamaps",
        "dosis",
        "echarts",
        "eclint",
        "eenwyk",
        "emscripten",
        "esversion",
        "fontfaceobserver",
        "gitalk",
        "glyphicon",
        "gruntjs",
        "herokuapp",
        "hoverinfo",
        "hsts",
        "htmlhint",
        "htmllint",
        "hugo",
        "joelvaneenwyk",
        "jsbeautifier",
        "jsonminify",
        "jvaneenwyk",
        "lastmod",
        "linebreak",
        "mapbox",
        "maxage",
        "modernizr",
        "nodeunit",
        "octokit",
        "pageview",
        "peaceiris",
        "pjson",
        "pnpify",
        "postgres",
        "preinstall",
        "readonly",
        "relaxerror",
        "repos",
        "resave",
        "sdks",
        "siggraph",
        "sslify",
        "stoponerror",
        "submodules",
        "thirdparty",
        "topojson",
        "twemoji",
        "typeit",
        "v",
        "wasm",
        "yarnpkg"
    ]
}
